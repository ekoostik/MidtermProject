<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="JPAVigilance">
	
	
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	
	
	<!-- begin entities -->

		
	<class>com.skilldistillery.vigilance.entities.User</class>
    <class>com.skilldistillery.vigilance.entities.HouseHold</class>
	<class>com.skilldistillery.vigilance.entities.HomeOwnerAssociation</class>
	<class>com.skilldistillery.vigilance.entities.Neighborhood</class>
	<class>com.skilldistillery.vigilance.entities.NeighborhoodEvent</class>
    <class>com.skilldistillery.vigilance.entities.Address</class>
	<class>com.skilldistillery.vigilance.entities.PersonOfInterest</class>
	<class>com.skilldistillery.vigilance.entities.Report</class>
	<class>com.skilldistillery.vigilance.entities.Animal</class>
	<class>com.skilldistillery.vigilance.entities.Pet</class>
	<class>com.skilldistillery.vigilance.entities.Vehicle</class>
	<class>com.skilldistillery.vigilance.entities.VehicleType</class>
	<class>com.skilldistillery.vigilance.entities.Post</class>
	<class>com.skilldistillery.vigilance.entities.Comment</class> 
	<class>com.skilldistillery.vigilance.entities.EventComment</class> 

	<!--end entities  -->


    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/vigilancedb?useSSL=false&amp;useLegacyDatetimeCode=false&amp;serverTimezone=US/Mountain" />
      <property name="javax.persistence.jdbc.user" value="vigil"/>
      <property name="javax.persistence.jdbc.password" value="vigil" />
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />

      <property name="hibernate.show_sql" value="false" />
      <property name="hibernate.format_sql" value="false" />

      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
      <property name="hibernate.connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider" />

      <property name="hibernate.c3p0.max_size" value="5" />
      <property name="hibernate.c3p0.min_size" value="0" />
      <property name="hibernate.c3p0.acquire_increment" value="1" />
      <property name="hibernate.c3p0.idle_test_period" value="300"/>
      <property name="hibernate.c3p0.max_statements" value="0" />
      <property name="hibernate.c3p0.timeout" value="60" />
    </properties>
	
	
	
	
	
	</persistence-unit>
</persistence>
